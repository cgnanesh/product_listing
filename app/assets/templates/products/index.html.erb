<div class="row">
  <div class="col-md-3 ">
  	<div class ="product-side-bar">
	    <a class="btn btn-primary new-product" ng-click="new_product()">New Product</a>
	    <div class="product-listing" >
	    	<div class="product-item" ng-repeat="product in products" ng-click="show(product)">
	    		<div class="name" >
						{{product.name}}
					</div>
	    		<div class="price" >
						{{product.price | currency}}
					</div>
	    	</div>
	    </div>
    </div>
  </div>

  <div ng-show="selectedProduct" class="col-md-9">
  	<div class="product-details">
      <h1 class='name'>{{ selectedProduct.name }}</h1>
      <p class='price'>{{ selectedProduct.price | currency }}</p>
      <p class='description'>{{ selectedProduct.description }}</p>

      <button class="btn btn-primary" ng-click="edit(selectedProduct)">Edit</button>
    	<button class="btn btn-danger" ng-click="destroy(selectedProduct)">Delete</button>
    </div>
  </div>
</div>  	  

<script type="text/ng-template" id="edit.html">
	<div class="modal-header">
      <h3 class="modal-title">Edit Product</h3>
  </div>
	<form name="myForm" class="edit-form">
		<div class="modal-body">
		  <div class="field" ng-class="{error: myForm.name.$invalid}">
		    <label>Name</label>
		    <input type="text" name="name" class="name" ng-model="product.name" required>
		    <span ng-show="myForm.name.$error.required" class="help-inline">
		        Required</span>
		  </div>

		  <div class="field" ng-class="{error: myForm.price.$invalid}">
		    <label>Price</label>
		    <input type="number" name="price" class="price" ng-model="product.price" step="any" required>
		    <span ng-show="myForm.price.$error.required" class="help-inline">
		        Number Required </span>
		  </div>

		  <div class="field">
			  <label>Description</label>
			  <textarea name="description" class="description" ng-model="product.description"></textarea>
		  </div>

	  </div>
	  <div class="modal-footer">
		  <button ng-click="cancel()" class="btn btn-primary btn-danger">Cancel</button>
		  <button ng-click="save()" ng-disabled="isClean() || myForm.$invalid" class="btn btn-primary">Save</button>
		</div	          
	</form>
</script>